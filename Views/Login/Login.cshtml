@model _3_Asp.Net_MVC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h3 style="margin-top: 120px">ĐĂNG NHẬP</h3>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="row">
            @{
                if (@TempData["Message"] != null)
                {
                    <strong style="color:red">@TempData["Message"]</strong>
                }
            }
        </div>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Nhập UserName hoặc Email</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end">
                <a href="/Login/Register" class="text-black"><u>Đăng ký tài khoản</u></a>
            </div>
            <div class="form-group">
                <input style="width:100%" type="submit" value="LOGIN" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

<div class="row">


    <div class="col-6">
        <a class="btn btn-primary" href="/Home/Index">Back to Home</a>
    </div>
</div>

